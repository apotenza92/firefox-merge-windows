{
    "manifest_version": 3,
    "name": "Merge Windows",
    "version": "1.0.2",
    "description": "Merge windows into the currently focussed window.",
    "icons": {
        "128": "icons/icon-light.svg"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "activeTab"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "homepage_url": "https://github.com/apotenza92/firefox-merge-windows",
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox-merge-windows@apotenza92.com"
        }
    },
    "background": {
        "scripts": [
            "merge.js"
        ],
        "type": "module"
    },
    "action": {
        "theme_icons": [
            {
                "light": "icons/icon-dark.svg",
                "dark": "icons/icon-light.svg",
                "size": 128
            }
        ],
        "default_title": "Merge Windows"
    }
}